<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_message_icon"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_margin="15dp"
        android:scaleType="fitXY"
        android:src="@mipmap/find_2_jiazheng" />

    <TextView
        android:id="@+id/tv_message_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_message_icon"
        android:layout_toRightOf="@id/iv_message_icon"
        android:text="消息类型" />

    <TextView
        android:id="@+id/tv_message_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_message_icon"
        android:layout_below="@id/tv_message_status"
        android:layout_marginTop="10dp"
        android:text="消息体" />
    <TextView
        android:id="@+id/tv_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_message_icon"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:text="时间" />

</com.zhy.autolayout.AutoRelativeLayout>