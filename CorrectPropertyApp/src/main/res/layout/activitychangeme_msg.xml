<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e8e8e8"
    android:orientation="vertical"
    tools:context="china.test.meui.SetMeChangeMsgActivity">

    <include
        android:id="@+id/change_me_msg_title"
        layout="@layout/layout_backtitle" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="144px"
        android:background="#fff"
        >
        <EditText
            android:id="@+id/nicename_setme_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="快输入你的昵称吧"
            android:textColor="#b2b2b2"
            android:textSize="44px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="36px"
            android:layout_marginRight="36px"
            />
    </com.zhy.autolayout.AutoRelativeLayout>


    <TextView
        android:id="@+id/msg_setme_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:gravity="center"
        android:text="一个好的昵称可以让你的朋友更容易记住你。"
        android:textColor="#4e4e4e"
        android:textSize="38px" />


</LinearLayout>
