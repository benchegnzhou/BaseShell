<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="288px"
        app:cardBackgroundColor="#fff"
        android:layout_marginLeft="36px"
        android:layout_marginRight="36px"
        android:layout_marginBottom="5px"
        >

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_house_image1"
                android:layout_width="334px"
                android:layout_height="228px"
                android:background="@mipmap/ic_launcher"
                android:layout_margin="30px"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/tv_zonename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/iv_house_image1"
                android:layout_toRightOf="@id/iv_house_image1"
                android:maxLength="10"
                android:textSize="43px"
                android:textColor="#4e4e4e"
                android:text="唐宁one" />

            <TextView
                android:id="@+id/tv_house_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_zonename"
                android:layout_marginTop="20px"
                android:layout_toRightOf="@id/iv_house_image1"
                android:maxLength="10"
                android:text="1栋1单元509"
                android:textColor="#b2b2b2"
                android:textSize="37px"
                />

            <TextView
                android:id="@+id/tv_house_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30px"
                android:layout_alignBottom="@id/iv_house_image1"
                android:clickable="true"
                android:textColor="@color/apptheme"
                android:textSize="37px"
                android:text="出租中" />

            <TextView
                android:id="@+id/tv_cancel_bind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="15dp"
                android:clickable="true"
                android:text="解除绑定" />


            <TextView
                android:id="@+id/tv_cancle_attend"
                android:layout_width="216px"
                android:layout_height="72px"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@id/iv_house_image1"
                android:layout_marginRight="30px"
                android:text="取消关注"
                android:textSize="37px"
                android:background="@drawable/mycommunity_add_message"
                android:textColor="@drawable/mycommunity_add_message_textcolor"
                android:clickable="true"
                android:visibility="gone"
                />

        </com.zhy.autolayout.AutoRelativeLayout>


    </android.support.v7.widget.CardView>


</com.zhy.autolayout.AutoRelativeLayout>