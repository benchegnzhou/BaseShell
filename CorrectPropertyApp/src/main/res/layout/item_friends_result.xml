<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_user_icon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_margin="15dp"
        android:src="@drawable/default_avatar" />

    <TextView
        android:id="@+id/tv_statue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:text="状态"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tv_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_user_icon"
        android:layout_toRightOf="@id/iv_user_icon"
        android:ellipsize="end"
        android:maxWidth="120dp"
        android:maxLines="1"
        android:text="好友名字"
        android:textColor="#000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_item_name"
        android:layout_alignTop="@id/tv_item_name"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/tv_item_name"
        android:background="@drawable/userinfor_gender_male"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="男♂"
        android:textColor="#fff"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tv_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_gender"
        android:layout_alignTop="@id/tv_gender"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/tv_gender"
        android:background="@drawable/userinfor_age"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="4岁"
        android:textColor="#fff"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tv_signature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_user_icon"
        android:layout_toRightOf="@id/iv_user_icon"
        android:ellipsize="end"
        android:maxLines="1"
        android:maxWidth="200dp"
        android:text="这个人很懒，什么也没有留下。。" />
</RelativeLayout>