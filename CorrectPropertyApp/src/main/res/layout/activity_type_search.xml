<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_type_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="china.test.ui.CommunityTypeSearchActivity">
    <!--头布局-->
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/rl_bar"
        android:layout_width="match_parent"
        android:layout_height="156px"
        android:background="@color/apptheme">

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="36px"
            android:paddingRight="60px">

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/app_common_title_back" />

        </com.zhy.autolayout.AutoRelativeLayout>

        <TextView
            style="@style/app_top_common_title_stytle"
            android:text="公共报事类型选择" />


    </com.zhy.autolayout.AutoRelativeLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipelayout_community_repair_type"
        android:layout_width="match_parent"
        android:layout_below="@id/rl_bar"
        android:layout_height="match_parent">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_community_repair_type"
        android:background="#e8e8e8"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    </android.support.v4.widget.SwipeRefreshLayout>

</com.zhy.autolayout.AutoRelativeLayout>
