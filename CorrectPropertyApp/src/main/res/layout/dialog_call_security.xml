<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="@dimen/px_300"
    android:background="@color/transparent"
    android:clickable="true"
    android:orientation="vertical">
    <!--android:padding="@dimen/px_20"-->
    <!--xmlns:android="http://schemas.android.com/apk/res/android"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/sharp_community_dialog_call"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:gravity="center">


            <TextView
                android:id="@+id/text1_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5px"
                android:text="呼叫保安"
                android:textColor="#FD5056"
                android:textSize="62px" />


        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e8e8e8" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/join_cancel"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/sharp_community_dialog_call_cancle"
                android:gravity="center"
                android:text="手抖,不拨打"
                android:textColor="#FD5056"
                android:textSize="48px"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/join_confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/sharp_community_dialog_call_yes"
                android:gravity="center"
                android:text="确认呼叫"

                android:textColor="#FFFFFF"
                android:textSize="48px"
                android:textStyle="normal|bold" />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>
