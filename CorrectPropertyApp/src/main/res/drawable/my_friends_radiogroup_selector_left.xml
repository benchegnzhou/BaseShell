<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape>
            <stroke android:width="1px" android:color="#fff"></stroke>
            <corners
                android:bottomLeftRadius="100px"
                android:bottomRightRadius="0px"
                android:topLeftRadius="100px"
                android:topRightRadius="0px"></corners>
            <solid android:color="#fff"></solid>
        </shape>
    </item>
    <item android:state_checked="false">
        <shape>
            <stroke android:width="1px" android:color="#fff"></stroke>
            <corners
                android:bottomLeftRadius="100px"
                android:bottomRightRadius="0px"
                android:topLeftRadius="100px"
                android:topRightRadius="0px"></corners>
            <solid android:color="@color/apptheme"></solid>
        </shape>
    </item>
</selector>